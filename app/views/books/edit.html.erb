<div class="container col-lg-3 mx-auto">
  <h2 class="mt-3">Edit book</h2>
    <%= form_with model: @book, url:book_path(@book.id),method: :patch do |f| %>
  <h6>Title</h6>
    <%= f.text_field :title %>
  <h6>Opinion</h6>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
  <% end %>
    <%= link_to "Show", book_path(@book) %> |
    <%= link_to "Back", "/books" %>
</div>