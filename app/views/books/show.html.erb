<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'list', user: @user, book: @newbook %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <% if @book.user == current_user %>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>