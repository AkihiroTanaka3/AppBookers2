    <div class="col-md-3">
      <h2 class="mt-3">User info</h2>
        <%= image_tag user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
        </tr>
        </tbody>
      </table>
        <div class="row">
          <% if user == current_user %>
            <a class="btn btn-outline-secondary bnt-block" href= "/user/edit" %>
              <i class="fas fa-user-cog"></i>
            </a>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: book do |f| %>
        <h6>Title</h6>
          <%= f.text_field :title %>
        <h6>Opinion</h6>
          <%= f.text_area :body %>
          <%= f.submit '投稿' %>
          <% end %>
    </div>